<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#4CAF50"
        android:paddingHorizontal="16dp">
        <ImageView
            android:id="@+id/btn_back_info"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            android:layout_centerVertical="true"
            app:tint="#FFFFFF"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin ứng dụng"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingBottom="50dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/logo"
                android:layout_marginTop="40dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Safe Dalat"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#333"
                android:layout_marginTop="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Version 1.0.0\nPhát triển bởi Nhóm 16"
                android:gravity="center"
                android:textColor="#757575"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="40dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="24dp">

                <LinearLayout
                    android:id="@+id/btn_contact_fb"
                    style="@style/AppInfoContainerStyle">
                    <ImageView
                        style="@style/AppInfoIconStyle"
                        android:src="@drawable/fb"/>
                    <TextView
                        style="@style/AppInfoTextStyle"
                        android:text="Liên hệ qua Facebook"/>
                    <ImageView
                        style="@style/AppInfoArrowStyle"
                        android:src="@drawable/tight"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_contact_zalo"
                    style="@style/AppInfoContainerStyle">
                    <ImageView
                        style="@style/AppInfoIconStyle"
                        android:src="@drawable/zalo"/>
                    <TextView
                        style="@style/AppInfoTextStyle"
                        android:text="Liên hệ qua Zalo"/>
                    <ImageView
                        style="@style/AppInfoArrowStyle"
                        android:src="@drawable/tight"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_contact_email"
                    style="@style/AppInfoContainerStyle">
                    <ImageView
                        style="@style/AppInfoIconStyle"
                        android:src="@drawable/email"/>
                    <TextView
                        style="@style/AppInfoTextStyle"
                        android:text="Liên hệ qua Email"/>
                    <ImageView
                        style="@style/AppInfoArrowStyle"
                        android:src="@drawable/tight"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_privacy_policy"
                    style="@style/AppInfoContainerStyle">
                    <ImageView
                        style="@style/AppInfoIconStyle"
                        android:src="@drawable/lock"/>
                    <TextView
                        style="@style/AppInfoTextStyle"
                        android:text="Chính sách bảo mật &amp; Pháp lý"/>
                    <ImageView
                        style="@style/AppInfoArrowStyle"
                        android:src="@drawable/tight"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6FA">

    <LinearLayout
        android:id="@+id/layout_not_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp"
        android:visibility="visible">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/cn"
            app:tint="#BDBDBD"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bạn chưa đăng nhập"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vui lòng đăng nhập để sử dụng đầy đủ tính năng"
            android:gravity="center"
            android:textColor="#757575"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="32dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_login_now"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="ĐĂNG NHẬP NGAY"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/bg_button_green"/>
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/layout_logged_in"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#E8F5E9"
                android:gravity="center"
                android:paddingVertical="40dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    app:cardCornerRadius="45dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/white">
                    <TextView
                        android:id="@+id/tv_avatar_char"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="A"
                        android:textSize="36sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tv_fullname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Name"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#333"
                    android:layout_marginTop="16dp"/>

                <TextView android:id="@+id/tv_email_hidden" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tài khoản"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#333"
                android:paddingHorizontal="16dp"
                android:paddingTop="24dp"
                android:paddingBottom="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:paddingHorizontal="16dp">

                <LinearLayout
                    android:id="@+id/btn_settings"
                    style="@style/AppInfoContainerStyle">
                    <ImageView
                        style="@style/AppInfoIconStyle"
                        android:src="@drawable/setting"
                        app:tint="#4CAF50"/>
                    <TextView
                        style="@style/AppInfoTextStyle"
                        android:text="Cài đặt"/>
                    <ImageView
                        style="@style/AppInfoArrowStyle"
                        android:src="@drawable/tight"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tương tác"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#333"
                android:paddingHorizontal="16dp"
                android:paddingTop="24dp"
                android:paddingBottom="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:paddingHorizontal="16dp">

                <LinearLayout
                    android:id="@+id/btn_activity_dashboard"
                    style="@style/AppInfoContainerStyle">
                    <ImageView
                        style="@style/AppInfoIconStyle"
                        android:src="@drawable/tk"
                        app:tint="#4CAF50"/>
                    <TextView
                        style="@style/AppInfoTextStyle"
                        android:text="Hoạt động"/>
                    <ImageView
                        style="@style/AppInfoArrowStyle"
                        android:src="@drawable/tight"/>
                </LinearLayout>

                <View style="@style/DividerStyle"/>

                <LinearLayout
                    android:id="@+id/btn_app_info"
                    style="@style/AppInfoContainerStyle">
                    <ImageView
                        style="@style/AppInfoIconStyle"
                        android:src="@drawable/cn"
                        app:tint="#4CAF50"/>
                    <TextView
                        style="@style/AppInfoTextStyle"
                        android:text="Thông tin ứng dụng"/>
                    <ImageView
                        style="@style/AppInfoArrowStyle"
                        android:src="@drawable/tight"/>
                </LinearLayout>

                <View style="@style/DividerStyle"/>

                <LinearLayout
                    android:id="@+id/btn_logout"
                    style="@style/AppInfoContainerStyle">
                    <ImageView
                        style="@style/AppInfoIconStyle"
                        android:src="@drawable/logout"
                        app:tint="#F44336"/> <TextView
                    style="@style/AppInfoTextStyle"
                    android:text="Đăng xuất"
                    android:textColor="#F44336"/> <ImageView
                    style="@style/AppInfoArrowStyle"
                    android:src="@drawable/tight"
                    android:visibility="invisible"/> </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>